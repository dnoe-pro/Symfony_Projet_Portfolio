{# base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="https://cdn.tailwindcss.com"></script>
        
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-[#3b3b45]">
        <header>
            <div class="flex h-[80px]">
            <div class="bg-[#292A2E] flex-1 mr-[1px]"></div>
            <div class="bg-[#292A2E] w-[450px] shrink-0 mr-[1px]">
                <div class="text-2xl flex pl-10 p-5">
                    <div class="pr-5">logo</div>
                    <div class="">Noé DAMBREVILLE</div>
                </div>
            </div>
            <div class="bg-[#292A2E] w-[450px] shrink-0"></div>
            <div class="bg-[#292A2E]  w-[450px] shrink-0 ml-[1px]"></div>
            <div class="bg-[#292A2E] flex-1 ml-[1px]"></div>
            </div>
        </header>
            {% block body %}{% endblock %}

        <footer>
            <div class="flex h-[80px] pt-[1px]">
                <div class="bg-[#292A2E] flex-1 mr-[1px]"></div>
                <div class="bg-[#292A2E] w-[450px] shrink-0 mr-[1px]"></div>
                <div class="bg-[#292A2E] w-[450px] shrink-0">
                    <div class="container mx-auto p-5 text-center">
                        &copy; 2024-2025 dnoe-portfolio. Tous droits réservés.
                    </div>
                </div>
                <div class="bg-[#292A2E]  w-[450px] shrink-0 ml-[1px]"></div>
                <div class="bg-[#292A2E] flex-1 ml-[1px]"></div>
            </div>
        </footer>
    </body>
</html>