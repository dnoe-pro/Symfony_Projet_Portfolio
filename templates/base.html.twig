{# base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="script.js" defer></script>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.0.0/dist/tailwind.min.css" rel="stylesheet">
        <style>
            .circle {
            position: fixed;
            pointer-events: none;
            will-change: transform;
            width: 400px;
            height: 400px;
            border-radius: 9999px;
            background: radial-gradient(circle, rgb(216, 237, 255) 30%, rgb(43,46,71) 70%);
            z-index: -1;
            opacity: 0.8;s
            }
        </style>
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-[#3b3b45]">
    <div class="circle" id="cursor-circle"></div>
        <header>
            <div class="flex h-[80px]">
            <div class="bg-[#2b2e47] flex-1 mr-[1px]"></div>
            <div class="bg-[#2b2e47] w-[450px] shrink-0 mr-[1px]">
                <div class="text-2xl flex pl-10 p-5">
                    <div class="pr-5">logo</div>
                    <div class="">Noé DAMBREVILLE</div>
                </div>
            </div>
            <div class="bg-[#2b2e47] w-[450px] shrink-0"></div>
            <div class="bg-[#2b2e47]  w-[450px] shrink-0 ml-[1px]"></div>
            <div class="bg-[#2b2e47] flex-1 ml-[1px]"></div>
            </div>
        </header>
            {% block body %}{% endblock %}

        <footer>
            <div class="flex h-[80px] pt-[1px]">
                <div class="bg-[#2b2e47] flex-1 mr-[1px]"></div>
                <div class="bg-[#2b2e47] w-[450px] shrink-0 mr-[1px]"></div>
                <div class="bg-[#2b2e47] w-[450px] shrink-0">
                    <div class="container mx-auto p-5 text-center">
                        &copy; 2024-2025 dnoe-portfolio. Tous droits réservés.
                    </div>
                </div>
                <div class="bg-[#2b2e47]  w-[450px] shrink-0 ml-[1px]"></div>
                <div class="bg-[#2b2e47] flex-1 ml-[1px]"></div>
            </div>
        </footer>
    </body>
</html>